              <h5 class="card-title"><%- categoria.nombre  %> </h5>
              <p class="card-text"><%- categoria.info  %></p>
              <p class="card-text"><%- categoria.material  %></p>
              <a href="/categoria/<%- categoria.id %>" class="btn btn-primary">Ver m√°s</a>
            </div>
          </div>
        <% }) %>
