<!DOCTYPE html>
<html lang="es">
<%- include('../partials/head.ejs') %>

    <body>
        <%- include('../partials/headerAdmin.ejs') %>
            <main class="container">
                <h3 class="text-center">Editar CATEGORIA
                    <!-- <%= categoria.nombre %> -->
                </h3>
                <div class="container col-md-4">
                    <form class="row g-3" action="/admin/editarCategoria/<%= categoria.id%>?_method=PUT" method="POST" enctype="multipart/form-data">
                        <!-- action="/admin/editarSucursal/----  ?_method=PUT"   method="POST" -->
                        <div class="col-12">
                            <label for="inputName" class="form-label">Nombre</label>
                            <input type="text" class="form-control" id="inputName" name="nombre"
                                value="<%= categoria.nombre %>">
                        </div>
                        <div class="col-12">
                            <label for="inputAddress" class="form-label">iNFO</label>
                            <input type="text" class="form-control" id="inputAddress" name="info"
                                value="<%= categoria.info %>">
                        </div>
                        <div class="col-12">
                            <label for="inputTel" class="form-label">material</label>
                            <input type="tel" class="form-control" id="inputTel" name="material"
                                value="<%= categoria.material %>">
                        </div>

              <!--           <div class="col-12">
                            <label for="inputTel" class="form-label">Imagen </label>
                            <input type="tel" class="form-control" id="inputTel" name="material"
                                value="<%= categoria.imagen %>">

                        </div> -->
       
              
            
                        <!-- boton SUBUR IMAGEN, tener:  <input type="file" y:  name="image"> -->
                        <div class="col-12">
                            <!-- <label for="inputTel" class="form-label">materia</label> -->
                            <input type="file" name="image">
                        </div>

                        <div class="col-12">
                            <button type="submit" class="btn btn-success">EDITAR</button>
                        </div>
                    </form>
                </div>

            </main>

            <%- include('../partials/scripts.ejs') %>
    </body>

</html>